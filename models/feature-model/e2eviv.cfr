// -------------------
// CLARISSA Node Types
// -------------------

// We define generic Clafer types in this section that capture
// the possible nodes of a CLARISSA structure assurance case.
// To what extent we adopt CLARISSA is still up for discussion.
// But it might be a reasonable starting point to create our
// own bespoke notion of a formalized assurance case in Clafer.

abstract Node
  id -> string
  title -> string
  comments -> string *

abstract Claim : Node
  arguments -> Argument *
  subclaims -> Node * // Claim, SideClaim, Evidence, or Subcase
  defeaters -> Defeater *

abstract Argument : Node
  subclaims -> Node * // Claim, SideClaim, Evidence, or Subcase

// Concrete Arguments
abstract Concretion : Argument
abstract Substitution : Argument
abstract Decomposition : Argument
abstract Calculation : Argument
abstract EvidenceIncorporation : Argument

abstract Evidence : Node
  defeaters -> Defeater *

abstract SideClaim : Node
  arguments -> Argument *
  subclaims -> Node * // Claim, SideClaim, Evidence, or Subcase
  defeaters -> Defeater *

abstract Subcase : Node

abstract Defeater : Node

abstract Comment : Node

