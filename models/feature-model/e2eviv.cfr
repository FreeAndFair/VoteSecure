// ---------------------------------------
// Threat Model: STRIDE for E-Voting (WIP)
// ---------------------------------------

// Based on the Threats and Mitigations section of https://docs.google.com/document/d/1qQB5oXAc-CE0RGfoSCTVcHdLmTEMsdK7EYh4O97OzeM/

abstract SecurityProperty
    name -> string
    description -> string
    // traceability -> string

enum CIA_Triad = Confidentiality | Integrity | Availability

// Abstract formalized notion of a STRIDE claim/assertion
abstract STRIDE
    // Asset that is targeted by the threat
    // asset -> Assets
    // Type of threat within the STRIDE catalog
    xor ThreatType
        Spoofing              // S
        Tampering             // T
        Repudiation           // R
        InformationDisclosure // I
        DenialOfService       // D
        ElevationOfPrivilege  // E
    //
    // E-Voting security property that is violated
    xor SecurityProperty
        Accuracy : SecurityProperty
            [name = "Accuracy"]
            [description = "The votes must be correctly recorded and tallied. Votes cast by invalid voters must not be included in the tally. Cast votes cannot be altered, deleted, invalidated or copied."]
        //
        Privacy : SecurityProperty
            [name = "Privacy"]
            [description = "A voter and their vote cannot be linked."]
        //
        Eligibility : SecurityProperty
            [name = "Eligibility"]
            [description = "Only valid voters who meet certain predetermined criteria are eligible to vote."]
        //
        E2E_Verifiability : SecurityProperty
            [name = "E2E_Verifiability"]
            [description = "Voters can get convincing evidence that their encrypted votes accurately reflect their choices. Voters or their designees can check that their encrypted votes have been correctly included in the tally. Any member of the public can check that all the published encrypted votes are correctly included in the tally."]
        //
        EligibilityVerifiability : SecurityProperty
            [name = "EligibilityVerifiability"]
            [description = "Anyone can check that each vote in the election outcome was cast by a registered voter and at most one vote is counted per voter."]
        //
        ReceiptFreeness  : SecurityProperty
            [name = "ReceiptFreeness"]
            [description = "A voter does not gain any information (a 'receipt') that can be used to prove to anyone else that they voted in a certain way."]
        //
        CoercionResistance  : SecurityProperty
            [name = "NAME"]
            [description = "A voter cannot cooperate with a coercer to prove to them that they voted in a certain way."]
        //
        EverlastingPrivacy : SecurityProperty
            [name = "EverlastingPrivacy"]
            [description = "Even computationally unbounded adversaries cannot violate the Privacy property for any past election."]
        //
        Fairness : SecurityProperty
            [name = "Fairness"]
            [description = "No one can compute a partial tally before the election concludes."]
        //
        D_DisputeFreeness : SecurityProperty
            [name = "D_DisputeFreeness"]
            [description = "A mechanism is provided to resolve disputes in some dispute set D."]
        //
        Robustness : SecurityProperty
            [name = "Robustness"]
            [description = "The system is resilient to attacks and faults that can interrupt or prevent its normal operation."]
        //
        Scalability : SecurityProperty
            [name = "Scalability"]
            [description = "The system can scale to large numbers of voters without degrading performance or the user experience."]
    // CIA Properites
    CIA_Property -> CIA_Triad
    // Constraints relating security properties to threats
    [Accuracy => (Spoofing || Tampering)]
    [Privacy => InformationDisclosure]
    [Eligibility => Spoofing]
    [E2E_Verifiability => (Tampering || DenialOfService)]
    [EligibilityVerifiability => (Spoofing || Tampering)]
    [ReceiptFreeness => Repudiation]
    [CoercionResistance => Repudiation]
    [EverlastingPrivacy => InformationDisclosure]
    [Fairness => InformationDisclosure]
    [D_DisputeFreeness => Repudiation]
    [Robustness => DenialOfService]
    [Scalability => DenialOfService]
    // Constraints relating security properties to the CIA triad
    [Accuracy => CIA_Property = Integrity]
    [Privacy => CIA_Property = Confidentiality]
    [Eligibility => CIA_Property = Integrity]
    [E2E_Verifiability => CIA_Property = Integrity]
    [EligibilityVerifiability => CIA_Property = Integrity]
    [ReceiptFreeness => CIA_Property = Confidentiality]
    [CoercionResistance => CIA_Property = Confidentiality]
    [EverlastingPrivacy => CIA_Property = Confidentiality]
    [Fairness => CIA_Property = Integrity]
    [D_DisputeFreeness => CIA_Property = Integrity]
    [Robustness => CIA_Property = Availability]
    [Scalability => CIA_Property = Availability]

STRIDE_Threats : STRIDE
